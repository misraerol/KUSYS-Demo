@{
    ViewData["Title"] = "Kurs Ekle";
}
@model List<CourseViewModel>

<br />
<br />
<br />
@using (Html.BeginForm("Insert", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <div class="form-group">
            <input type="text" name="FirstName" placeholder="Adı" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="text" name="LastName" placeholder="Soyadı" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="date"  name="BirthDate" placeholder="31/12/2016" class="form-control" required />
        </div>
        <div class="form-group">
            <select name="CourseId" class="form-control required" placeholder="Kurs İsmi">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.CourseName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Ekle" />
        </div>
    </div>
}
