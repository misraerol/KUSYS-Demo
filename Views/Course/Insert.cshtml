@using (Html.BeginForm("Insert", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <div class="form-group">
            <input type="text" name="CourseId" placeholder="Kurs Id" class="form-control" required />
        </div>
        <div class="form-group">
            <input type="text" name="CourseName" placeholder="Kurs İsmi" class="form-control" required />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Ekle" />
        </div>
    </div>
}